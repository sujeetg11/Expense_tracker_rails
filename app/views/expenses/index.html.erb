<style>
  body {
    font-family: 'Arial', sans-serif;
    background: #f4f4f4;
    color: #333;
    margin: 20px;
    padding: 20px;
  }

  h1 {
    text-align: center;
    color: #dc3545;
    margin-bottom: 20px;
  }

  .total-purchase {
    background: #007bff;
    color: white;
    text-align: center;
    padding: 15px;
    font-size: 18px;
    border-radius: 8px;
    margin-bottom: 20px;
    font-weight: bold;
  }

  expenses {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    padding: 10px;
  }

  .expense-card {
    background: white;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
  }

  .expense-card:hover {
    transform: scale(1.03);
  }

  .expense-card p {
    margin: 5px 0;
    font-size: 16px;
  }

  .link-button {
    display: inline-block;
    padding: 8px 15px;
    background: #dc3545;
    color: white;
    border-radius: 5px;
    text-decoration: none;
    font-size: 14px;
    transition: 0.3s;
  }

  .link-button:hover {
    background: #a71d2a;
  }

  .new-expense-btn {
    display: block;
    width: 200px;
    text-align: center;
    margin: 20px auto;
    padding: 10px;
    background: #28a745;
    color: white;
    border-radius: 5px;
    text-decoration: none;
    font-size: 16px;
    transition: 0.3s;
  }

  .new-expense-btn:hover {
    background: #218838;
  }
</style>

<p style="color: green"><%= notice %></p>

<% content_for :title, "Expenses" %>

<h1>Expenses</h1>

<% total_purchase = @expenses.sum(:amount) %>

<div class="total-purchase">
  Total Purchase: Rs <%= total_purchase %>
</div>

<div id="expenses">
  <% @expenses.each do |expense| %>
    <div class="expense-card">
      <%= render expense %>
      <p>
        <%= link_to "Show this expense", expense, class: "link-button" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New Expense", new_expense_path, class: "new-expense-btn" %>
